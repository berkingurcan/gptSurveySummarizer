{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    "esModuleInterop": true, 
    "allowJs": true, 
    "outDir": "./dist",
    "baseUrl": ".", 
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@commands/*": ["src/commands/*"], 
      "@lib/*": ["src/lib/*"], 
      "@constants": ["src/constants"],
      "@config": ["src/config"] 
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.js" 
  ],
  "exclude": [
    "node_modules", 
    ".vscode",
    "**/*.spec.ts"
  ]
}
